{
    "pandoc-md-to-pdf": {
        "command": "pandoc",
        "parameters": [
            "memory.md",
            "-V", "papersize:a4",
            "-V", "fontsize=11pt",
            "--bibliography", "bibliography.bib",
            "--csl", "ieee.csl",  
            "--include-in-header", "titlesec.tex",
            "--number-sections",
            "-o", "out_1.pdf"
        ]
    },
    "delete-first-page": {
        "command": "pdftk",
        "parameters": [
            "out_1.pdf",
            "cat",
            "2-end",
            "output", "out_2.pdf"
        ]
    },
    "merge-cover": {
        "command": "pdftk",
        "parameters": [
            "cover.pdf",
            "out_2.pdf",
            "cat",
            "output", "memory.pdf"
        ]
    }
}
